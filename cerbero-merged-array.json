{
    "primary": [
        { "name" :  "naxis1",                           "format" : "%d"  ,                 "comment" : "# of pixels in axis1" },
        { "name" :  "naxis2",                           "format" : "%d"  ,                 "comment" : "# of pixels in axis2" },
        { "name" :  "bzero",                            "format" : "%f"  ,                 "comment" : "Pixel=fits*BSCALE+BZERO" },
        { "name" :  "bscale",                           "format" : "%f"  ,                 "comment" : "Pixel=fits*BSCALE+BZERO" },
        { "name" :  "blank",                            "format" : "%d"  ,                 "comment" : "Value used for NULL pixels" },
        { "name" :  "origin",    "default" : "OARPAF",  "format" : "%s"  ,                 "comment" : "Observatory" },
        { "name" :  "telescop",  "default" : "oarpaf",  "format" : "%s"  ,                 "comment" : "Telescope name" },
        { "name" :  "instrume",  "default" : "Cerbero", "format" : "%s"  ,                 "comment" : "Instrument used" },
        { "name" :  "object",                           "format" : "%s"  ,                 "comment" : "Target description" },
        { "name" :  "observer",                         "format" : "%s"  ,                 "comment" : "Name of observer" },
        { "name" :  "pi-coi",                           "format" : "%s"  ,                 "comment" : "Name(s) of proposer(s)" },
        { "name" :  "exptime",                          "format" : "%.6f", "unit" : "s",   "comment" : "[s] Exposure time" },
        { "name" :  "ra",                               "format" : "%.6f", "unit" : "deg", "comment" : "[deg] %HOURANG RA (J2000.0) pointing" },
        { "name" :  "dec",                              "format" : "%.5f", "unit" : "deg", "comment" : "[deg] %DEGREE DEC (J2000.0) pointing" },
        { "name" :  "equinox",                          "format" : "%.0f", "unit" : "y",   "comment" : "[y] Standard FK5" },
        { "name" :  "radecsys",   "default" : "FK5",    "format" : "%s"  ,                 "comment" : "FK5" },
        { "name" :  "date",                             "format" : "%s"  ,                 "comment" : "Date this file was written" },
        { "name" :  "mjd-obs",                          "format" : "%.8f", "unit" : "d",   "comment" : "[d] Observation start %DAYTIM" },
        { "name" :  "mjd-end",                          "format" : "%.8f", "unit" : "d",   "comment" : "[d] Observation end %DAYTIM" },
        { "name" :  "date-obs",                         "format" : "%s"  ,                 "comment" : "Observations start" },
        { "name" :  "date-end",                         "format" : "%s"  ,                 "comment" : "Observation end" },
        { "name" :  "timesys",    "default" : "TBD",    "format" : "%s"  ,                 "comment" : "Time system used" },
        { "name" :  "lst",                              "format" : "%.3f", "unit" : "s",   "comment" : "[s] %TIME LST at start" },
        { "name" :  "utc",                              "format" : "%.3f", "unit" : "s",   "comment" : "[s] %TIME UTC at start" },
        { "name" :  "ctype1",                           "format" : "%s"  ,                 "comment" : "Coordinate system" },
        { "name" :  "ctype2",                           "format" : "%s"  ,                 "comment" : "Coordinate system" },
        { "name" :  "crval1",                           "format" : "%f"  ,                 "comment" : "Coordinate value of ref pixel" },
        { "name" :  "crval2",                           "format" : "%f"  ,                 "comment" : "Coordinate value of ref pixel" },
        { "name" :  "crpix1",                           "format" : "%f"  ,                 "comment" : "Ref pixel in axis1" },
        { "name" :  "crpix2",                           "format" : "%f"  ,                 "comment" : "Ref pixel in axis2" },
        { "name" :  "cd1_1",                            "format" : "%f"  ,                 "comment" : "Transformation matrix element" },
        { "name" :  "cd1_2",                            "format" : "%f"  ,                 "comment" : "Transformation matrix element" },
        { "name" :  "cd2_1",                            "format" : "%f"  ,                 "comment" : "Transformation matrix element" },
        { "name" :  "cd2_2",                            "format" : "%f"  ,                 "comment" : "Transformation matrix element" },
        { "name" :  "cunit1",                           "format" : "%s"  ,                 "comment" : "Unit of coordinate" },
        { "name" :  "cunit2",                           "format" : "%s"  ,                 "comment" : "Unit of coordinate" },
        { "name" :  "checksum",                         "format" : "%s"  ,                 "comment" : "HDU checksum" },
        { "name" :  "datasum",                          "format" : "%s"  ,                 "comment" : "Data unit checksum" }
    ],

    "hierarch": [
        
        { "name" :  "tel id",                           "format" : "%30s",                 "comment" : "Telescope Control SW ID" },
        { "name" :  "tel name",                         "format" : "%30s",                 "comment" : "Telescope Control SW name" },
        { "name" :  "tel date",                         "format" : "%10s",                 "comment" : "TCS installation date" },
        { "name" :  "tel alt",                          "format" : "%.3f", "unit" : "deg", "comment" : "[deg] Tel ALT angle at start" },
        { "name" :  "tel az",                           "format" : "%.3f", "unit" : "deg", "comment" : "[deg] Tel Azimuth at start" },
        { "name" :  "tel geolat",  "default" : 44.5911, "format" : "%.4f", "unit" : "deg", "comment" : "[deg] Tel geographic lat (+=North)" },
        { "name" :  "tel geolon",  "default" : 9.2034,  "format" : "%.4f", "unit" : "deg", "comment" : "[deg] Tel geographic lon (+=East)" },
        { "name" :  "tel geoelev", "default" : 1480,    "format" : "%.0f", "unit" : "m",   "comment" : "[m] Elevation above sea level"},

        { "name" :  "dpr catg",      "range" : ["science", "calib", "acquisition", "technical", "test"],
                                     "format" : "%30s", "comment" : "Observation category" },
        { "name" :  "dpr type prin", "range" : ["object", "bias", "dark", "flat", "std", "astrometry"],
                                     "format" : "%30s", "comment" : "Observation type" },
        { "name" :  "dpr type qual", "range" : ["sky", "dome", "lamp", "flux", "wave", "focus", "slit", "fiber"],
                                     "format" : "%30s", "comment" : "Observation type" },
        { "name" :  "dpr tech prin", "range" : ["image", "spectrum", "echelle", "polarimetry"],
                                     "format" : "%30s", "comment" : "Observation type" },
        { "name" :  "dpr tech qual", "range" : ["tel-through", "ins-through", "direct", "nodding", "jitter"],
                                     "format" : "%30s", "comment" : "Observation type" }
    ]
}
